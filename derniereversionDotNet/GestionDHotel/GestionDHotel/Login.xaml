<Window x:Class="GestionDHotel.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionDHotel"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid x:Name="Email1">
        <Label x:Name="Email" Content="Email&#xD;&#xA;&#xD;&#xA;" HorizontalAlignment="Left" Margin="69,50,0,0" VerticalAlignment="Top" Width="85"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="69,0,0,0" VerticalAlignment="Center" Height="0" RenderTransformOrigin="0.5,0.5" Width="81">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="empl" Content="Password&#xD;&#xA;&#xD;&#xA;" HorizontalAlignment="Left" Margin="74,173,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="inputLog" HorizontalAlignment="Left" Margin="104,113,0,0" TextWrapping="Wrap" Text="&#xD;&#xA;" VerticalAlignment="Top" Width="500" Height="23" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="inputLog2" HorizontalAlignment="Left" Margin="104,231,0,0" TextWrapping="Wrap" Text="&#xD;&#xA;" VerticalAlignment="Top" Width="500" Height="24" TextChanged="inputLog2_TextChanged"/>
        <Button x:Name="ButLog" Content="Login&#xD;&#xA;" HorizontalAlignment="Left" Margin="581,328,0,0" VerticalAlignment="Top" Click="Button_Click" Width="140" Height="40" Background="#FF47763A" FontWeight="Bold" FontFamily="Bookman Old Style" FontSize="20"/>

    </Grid>
</Window>
