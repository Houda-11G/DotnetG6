<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
   
    <title>@ViewData["Title"]</title>
    <!-- Lien vers Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
     body {
    background-color: #333; /* Définit un fond gris foncé pour la page entière */
    color: white; /* Texte en blanc pour contraster avec le fond gris foncé */
}

        /* Images du carrousel */
        .carousel-item img {
            width: 100vw; /* Largeur dynamique basée sur l'écran */
            height: 70vh; /* Hauteur personnalisée selon l'écran */
            object-fit: cover; /* Ajuste l'image pour remplir sans déformation */
        }

        /* Texte centré sur les images */
        .carousel-caption {
            position: absolute;
            top: 50%; /* Centre verticalement */
            left: 50%; /* Centre horizontalement */
            transform: translate(-50%, -50%);
            text-align: center;
            color: white;
            font-weight: bold;
            z-index: 10;
            font-size: 3rem;
            letter-spacing: 2px;
        }

        .carousel-caption .lead {
            font-size: 1.5rem;
        }

        .carousel-caption .btn {
            font-size: 1.25rem;
            padding: 12px 24px;
        }

        /* Ajustement général pour s'assurer que tout reste fluide */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }
    </style>
</head>
<body>
  <div class="container-fluid p-0">
    <div id="photoCarousel" class="carousel slide" data-bs-ride="carousel">
        <!-- Indicateurs -->
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#photoCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#photoCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#photoCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>

        <!-- Images du carrousel avec texte -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/hot1.jpeg" alt="Hotel 1">
                <div class="carousel-caption">
                    <h1 class="display-4">Bienvenue à GHotel!</h1>
                    <p class="lead">Profitez d'une expérience de séjour inoubliable dans nos hôtels de luxe.</p>
                    <a class="btn btn-primary btn-lg" href="/Reservation/Create" role="button">Réserver maintenant</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/hot2.jpeg" alt="Hotel 2">
                <div class="carousel-caption">
                    <h1 class="display-4">Luxe et Confort</h1>
                    <p class="lead">Découvrez nos chambres spacieuses et modernes.</p>
                    <a class="btn btn-primary btn-lg" href="/Reservation/Create" role="button">Réserver maintenant</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/hot3.jpeg" alt="Hotel 3">
                <div class="carousel-caption">
                    <h1 class="display-4">Un Service Exceptionnel</h1>
                    <p class="lead">Un personnel à votre écoute pour un séjour parfait.</p>
                    <a class="btn btn-primary btn-lg" href="/Reservation/Create" role="button">Réserver maintenant</a>
                </div>
            </div>
        </div>

        <!-- Contrôles du carrousel -->
        <button class="carousel-control-prev" type="button" data-bs-target="#photoCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Précédent</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#photoCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Suivant</span>
        </button>
    </div>
</div>

    <!-- Lien vers Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
